{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/sc.title"
    },
    "description": {
        "$ref": "#/messages/sc.description"
    },
    "longDescription": {
        "$ref": "#/messages/sc.longDescription"
    },
    "type": "object",
    "properties": {
        "incident-name": {
            "description": {
                "$ref": "#/messages/sc.manifestServiceName"
            },
            "type": "string"
        },
        "incident-url": {
            "description": {
                "$ref": "#/messages/sc.manifestBaileyURL"
            },
            "type": "string"
        }
    },
    "required": [
        "incident-name",
        "incident-url"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Service name",
            "key": "incident-name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Bailey URL",
            "key": "incident-url"
        }
    ]
}